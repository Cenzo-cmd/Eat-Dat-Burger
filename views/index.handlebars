<div class="jumbotron">
    <h1 class="display-4" id="mainTitle">BURGERSSSS!</h1>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel"
        style="max-width: 500px; margin: 0 auto">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/assets/img/burger.jpg" class="d-block w-30 img-fluid"
                    alt="Picture of a double double">
            </div>
            <div class="carousel-item">
                <img src="/assets/img/burger2.jpg" class="d-block w-30 img-fluid"
                    alt="Picture of a chicken burger">
            </div>
            <div class="carousel-item">
                <img src="/assets/img/burger3.jpg" class="d-block w-30 img-fluid"
                    alt="Oicture of a big burger">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
            data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
            data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <p class="lead">Go ahead! Make my....burger!</p>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Enter Burger Name Here 👉</label>
            <input type="text" id="burgerText" name="burger">
        </div>

        <button id="submitButton" type="submit">Add Burger</button>
    </form>
</div>



<div class="card card-left">
    <div class="card-header">
        Burgers to be Consumed!
    </div>
    <ol>
        {{#each burgers}}
        {{#unless devoured}}
        <li>🍔 {{this.burger_name}}
            <button class="devourButton" data-id={{this.id}}>Devour</button>
            <hr>
        </li>

        {{/unless}}
        {{/each}}
    </ol>
</div>

<div class="card card-right">
    <div class="card-header">
        Consumed Burgers!
    </div>
    <ol>
        {{#each burgers}}
        {{#if devoured}}
        <li>
            🍽 {{this.burger_name}}
            <button class="deleteButton" data-id={{this.id}}>Dispose</button>
            <hr>
        </li>
        {{/if}}
        {{/each}}
    </ol>
</div>